<p id="notice"><%= notice %></p>

<h1>People</h1>

<table>
  <thead>
    <tr>
      <th>Lastname</th>
      <th>Name</th>
      <th>Dni</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Gender</th>
      <th>State</th>
      <th>Rol</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.lastname %></td>
        <td><%= person.name %></td>
        <td><%= person.dni %></td>
        <td><%= person.phone %></td>
        <td><%= person.email %></td>
        <td><%= person.gender %></td>
        <td><%= person.state %></td>
        <td><%= person.rol %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

