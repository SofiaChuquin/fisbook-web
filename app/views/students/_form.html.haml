- if @y == "edit"
  = form_for(student) do |f|
    - if student.errors.any?
      #error_explanation
        %h4
          = pluralize(student.errors.count, "error")
          prohibited this student from being saved:
        %ul
          - student.errors.full_messages.each do |message|
            %li= message
    = f.fields_for :person_attributes do |p|
      .row
        .input-field.col.s12.m6.l5
          = p.text_field :lastname, :value => student.person.lastname
          = p.label :lastname, 'Apellidos', class: 'active'
        .input-field.col.s12.m6.l5.push-l2
          = p.text_field :name, :value => student.person.name
          = p.label :name, 'Nombres', class: 'active'
      .row
        .input-field.col.s12.m6.l5
          = p.text_field :dni, :value => student.person.dni
          = p.label :dni
        .input-field.col.s12.m6.l5.push-l2
          = p.text_field :phone, :value => student.person.phone
          = p.label :phone, 'Teléfono', class: 'active'
      .row
        .input-field.col.s12.m6.l5
          = p.text_field :email, :value => student.person.email
          = p.label :email, 'Correo electrónico', class: 'active'
        .input-field.col.s12.m6.l5.push-l2
          = p.select :gender do
            - [['Masculino', 'Masculino'], ['Femenino', 'Femenino']].each do |c|
              = content_tag(:option, c.first, value: c.last)
          = p.label :gender, 'Género'
      .row
        .input-field.col.s12.m6.l5
          = p.text_field :state, :value => student.person.state
          = p.label :state, 'Estado', class: 'active'
          = p.hidden_field :rol, value: 'Estudiante'
        .input-field.col.s12.m6.l5.push-l2
          = f.text_field :turn
          = f.label :turn, 'Turno', class: 'active'
      .row.actions
        .col.s12.m6.l5
          %button.btn.waves-effect.waves-light{type: "submit"} Guardar
