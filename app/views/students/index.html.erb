<h1>Students</h1>

<table>
  <thead>
    <tr>
      <th>Lastname</th>
      <th>Name</th>
      <th>Dni</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Gender</th>
      <th>State</th>
      <th>Turn</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.person.lastname %></td>
        <td><%= student.person.name %></td>
        <td><%= student.person.dni %></td>
        <td><%= student.person.phone %></td>
        <td><%= student.person.email %></td>
        <td><%= student.person.gender %></td>
        <td><%= student.person.state %></td>
        <td><%= student.turn %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

