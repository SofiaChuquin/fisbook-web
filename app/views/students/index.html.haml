.max-container
  %h2 Estudiantes
  %table.responsive-table.striped
    %thead
      %tr
        %th Apellidos
        %th Nombres
        %th DNI
        %th Teléfono
        %th Correo electrónico
        %th Género
        %th Estado
        %th Turno
        %th{:colspan => "3"}
    %tbody
      - @students.each do |student|
        %tr
          %td= student.person.lastname
          %td= student.person.name
          %td= student.person.dni
          %td= student.person.phone
          %td= student.person.email
          %td= student.person.gender
          %td= student.person.state
          %td= student.turn
          %td= link_to 'Mostrar', student
          %td= link_to 'Editar', edit_student_path(student)
          %td= link_to 'Eliminar', student, method: :delete, data: { confirm: '¿Está seguro?' }
  %br/
  = link_to 'Agregar estudiante', new_student_path
