.max-container
  %div{:style => "display: inline-block"}
    %h2 Estudiantes 
  %div{:style => "display: inline-block"}
    =image_tag "students.png", class: 'imagen'
  %table.responsive-table.striped
    %thead
      %tr
        %th Apellidos
        %th Nombres
        %th DNI
        %th Teléfono
        %th Correo electrónico
        %th Género
        %th Estado
        %th Turno
        %th{:colspan => "3"}
    %tbody
      - @students.each do |student|
        %tr
          %td= student.person.lastname
          %td= student.person.name
          %td= student.person.dni
          %td= student.person.phone
          %td= student.person.email
          %td= student.person.gender
          %td= student.person.state
          %td= student.turn
          %td= link_to 'Mostrar', student, class: 'accion'
          %td= link_to 'Editar', edit_student_path(student), class: 'accion'
          %td= link_to 'Eliminar', student, method: :delete, data: { confirm: '¿Está seguro?' }, class: 'accion'
  %br/
  .row.actions
    .col.s12.m6.l5
      %a.waves-effect.waves-light.btn{:href => "#{url_for(new_student_path)}"} Agregar estudiante

    