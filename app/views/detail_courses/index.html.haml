%h1 Detail Courses
%table
  %thead
    %tr
      %th First practice
      %th Second practice
      %th Third practice
      %th First exam
      %th Second exam
      %th Permanent
      %th Unique exam
      %th Defer exam
      %th Average
      %th{:colspan => "3"}
  %tbody
    - @detail_courses.each do |detail_course|
      %tr
        %td= detail_course.first_practice
        %td= detail_course.second_practice
        %td= detail_course.third_practice
        %td= detail_course.first_exam
        %td= detail_course.second_exam
        %td= detail_course.permanent
        %td= detail_course.unique_exam
        %td= detail_course.defer_exam
        %td= detail_course.average
        %td= link_to 'Show', detail_course
        %td= link_to 'Edit', edit_detail_course_path(detail_course)
        %td= link_to 'Destroy', detail_course, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Detail Course', new_detail_course_path
