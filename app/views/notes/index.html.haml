%h1 Notes
%table
  %thead
    %tr
      %th First practice
      %th Second practice
      %th Third practice
      %th First exam
      %th Second exam
      %th Permanent
      %th Unique exam
      %th Defer exam
      %th Average
      %th{:colspan => "3"}
  %tbody
    - @notes.each do |note|
      %tr
        %td= note.first_practice
        %td= note.second_practice
        %td= note.third_practice
        %td= note.first_exam
        %td= note.second_exam
        %td= note.permanent
        %td= note.unique_exam
        %td= note.defer_exam
        %td= note.average
        %td= link_to 'Show', course_student_note_path(id: note.id, course_id: params[:course_id], student_id:params[:student_id])
        %td= link_to 'Edit', edit_course_student_note_path(id: note.id, course_id: params[:course_id], student_id:params[:student_id])
        %td= link_to 'Destroy', course_student_note_path(id: note.id, course_id: params[:course_id], student_id:params[:student_id]), method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Note', new_course_student_note_path
