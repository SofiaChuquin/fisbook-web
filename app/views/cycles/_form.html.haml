= form_for(cycle) do |f|
  - if cycle.errors.any?
    #error_explanation
      %h2
        = pluralize(cycle.errors.count, "error")
        prohibited this cycle from being saved:
      %ul
        - cycle.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :semester
    = f.text_field :semester
  .field
    = f.label :year
    = f.number_field :year
  .row.actions
    .col.s12.m6.l5
      %button.btn.waves-effect.waves-light{type: "submit"} Guardar

    