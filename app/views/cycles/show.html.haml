= provide(:title, "Datos del ciclo")
%div{:style => "display: inline-block"}
	%h3= "#{@cycle.name} #{@cycle.year}-#{@cycle.semester}"
%div{:style => "display: inline-block"}
	%a.accion{:href => "#{url_for(edit_cycle_path(@cycle))}"}
		%i.small.material-icons.iconos mode_edit
%br
%h5 Matrículas
%ul
- @cycle.enrollments.each do |e|
	%li= link_to e.voucher, cycle_enrollment_path(@cycle.id, e.id), class: 'accion'
%br
%a.waves-effect.waves-light.btn{:href => "#{url_for(new_cycle_enrollment_path(@cycle.id))}"} Gestionar matrículas
%br
%br
%hr
%h5 Cursos
%ul
- @cycle.courses.each do |c|
	%li= link_to c.name, cycle_course_path(@cycle.id, c.id), class: 'accion'
	%br
%a.waves-effect.waves-light.btn{:href => "#{url_for(new_cycle_course_path(@cycle.id))}"} Agregar curso

