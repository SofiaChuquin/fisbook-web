= provide(:title, "Ciclos")
%table
  %thead
    %tr
      %th Nombre
      %th Semestre
      %th Año
      %th{:colspan => "3"}
  %tbody
    - @cycles.each do |cycle|
      %tr
        %td= cycle.name
        %td= cycle.semester
        %td= cycle.year
        %td= link_to 'Mostrar', cycle
        %td= link_to 'Editar', edit_cycle_path(cycle)
        %td= link_to 'Eliminar', cycle, method: :delete, data: { confirm: '¿Está seguro?' }
%br/
= link_to 'Nuevo Ciclo', new_cycle_path
