- if @z == "edit"
  = form_for(executive) do |f|
    - if executive.errors.any?
      #error_explanation
        %h4
          = pluralize(executive.errors.count, "error")
          prohibited this executive from being saved:
        %ul
          - executive.errors.full_messages.each do |message|
            %li= message
    = f.fields_for :person_attributes do |p|
      .row
        .input-field.col.s12.m6.l5
          = p.text_field :lastname, :value => executive.person.lastname
          = p.label :lastname
        .input-field.col.s12.m6.l5.push-l2
          = p.text_field :name, :value => executive.person.name
          = p.label :name
      .row
        .input-field.col.s12.m6.l5
          = p.text_field :dni, :value => executive.person.dni
          = p.label :dni
        .input-field.col.s12.m6.l5.push-l2
          = p.text_field :phone, :value => executive.person.phone
          = p.label :phone
      .row
        .input-field.col.s12.m6.l5
          = p.text_field :email, :value => executive.person.email
          = p.label :email
        .input-field.col.s12.m6.l5.push-l2
          = p.select :gender do
            - [['Masculino', 'Masculino'], ['Femenino', 'Femenino']].each do |c|
              = content_tag(:option, c.first, value: c.last)
          = p.label :gender
      .row
        .input-field.col.s12.m6.l5
          = p.text_field :state, :value => executive.person.state
          = p.label :state
          = p.hidden_field :rol, value: 'Directivo'
        .input-field.col.s12.m6.l5.push-l2
          = f.text_field :position
          = f.label :position
    .row.actions
      .col.s12.m6.l5
        %button.btn.waves-effect.waves-light{type: "submit"} Guardar
