= form_for(executive) do |f|
  - if executive.errors.any?
    #error_explanation
      %h4
        = pluralize(executive.errors.count, "error")
        prohibited this executive from being saved:
      %ul
        - executive.errors.full_messages.each do |message|
          %li= message
  = f.fields_for :person_attributes do |p|
    .row
      .input-field.col.s12.m6.l5
        = p.label :lastname
        = p.text_field :lastname
      .input-field.col.s12.m6.l5.push-l2
        = p.label :name
        = p.text_field :name
    .row
      .input-field.col.s12.m6.l5
        = p.label :dni
        = p.text_field :dni
      .input-field.col.s12.m6.l5.push-l2
        = p.label :phone
        = p.text_field :phone
    .row
      .input-field.col.s12.m6.l5
        = p.label :email
        = p.text_field :email
      .input-field.col.s12.m6.l5.push-l2
        = p.label :gender
        = p.text_field :gender
    .row
      .input-field.col.s12.m6.l5
        = p.label :state
        = p.text_field :state
        = p.hidden_field :rol, value: 'Directivo'
      .input-field.col.s12.m6.l5.push-l2
        = f.label :position
        = f.text_field :position
  .row.actions
    .col.s12.m6.l5
      %button.btn.waves-effect.waves-light{type: "submit"} Guardar
