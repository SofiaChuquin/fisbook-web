.max-container
  %h2 Personal administrativo
  %table.responsive-table.striped
    %thead
      %tr
        %th Apellidos
        %th Nombres
        %th DNI
        %th Teléfono
        %th Correo electrónico
        %th Género
        %th Estado
        %th Puesto
        %th{:colspan => "3"}
    %tbody
      - @executives.each do |executive|
        %tr
          %td= executive.person.lastname
          %td= executive.person.name
          %td= executive.person.dni
          %td= executive.person.phone
          %td= executive.person.email
          %td= executive.person.gender
          %td= executive.person.state
          %td= executive.position
          %td= link_to 'Mostrar', executive
          %td= link_to 'Editar', edit_executive_path(executive)
          %td= link_to 'Eliminar', executive, method: :delete, data: { confirm: '¿Está seguro?' }
  %br/
  = link_to 'Agregar Personal Administrativo', new_executive_path
