- if @x == "edit"
  = form_for(teacher) do |f|
    - if teacher.errors.any?
      #error_explanation
        %h4
          = pluralize(teacher.errors.count, "error")
          prohibited this teacher from being saved:
        %ul
          - teacher.errors.full_messages.each do |message|
            %li= message
    = f.fields_for :person_attributes do |p|
      .row
        .input-field.col.s12.m6.l5
          = p.text_field :lastname, :value => teacher.person.lastname
          = p.label :lastname
        .input-field.col.s12.m6.l5.push-l2
          = p.text_field :name, :value => teacher.person.name
          = p.label :name
      .row
        .input-field.col.s12.m6.l5
          = p.text_field :dni, :value => teacher.person.dni
          = p.label :dni
        .input-field.col.s12.m6.l5.push-l2
          = p.text_field :phone, :value => teacher.person.phone
          = p.label :phone
      .row
        .input-field.col.s12.m6.l5
          = p.text_field :email, :value => teacher.person.email
          = p.label :email
        .input-field.col.s12.m6.l5.push-l2
          = p.select :gender do
            - [['Masculino', 'Masculino'], ['Femenino', 'Femenino']].each do |c|
              = content_tag(:option, c.first, value: c.last)
          = p.label :gender
      .row
        .input-field.col.s12.m6.l5
          = p.text_field :state, :value => teacher.person.state
          = p.label :state
          = p.hidden_field :rol, value: 'Docente'
        .input-field.col.s12.m6.l5.push-l2
          = f.text_field :rank
          = f.label :rank, 'Rango', class: 'active'
    .row.actions
      .col.s12.m6.l5
        %button.btn.waves-effect.waves-light{type: "submit"} Guardar
