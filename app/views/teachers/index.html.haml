.max-container
  %h2 Docentes
  %table.responsive-table.striped
    %thead
      %tr
        %th Apellidos
        %th Nombres
        %th DNI
        %th Teléfono
        %th Correo electrónico
        %th Género
        %th Estado
        %th Rango
        %th{:colspan => "3"}
    %tbody
      - @teachers.each do |teacher|
        %tr
          %td= teacher.person.lastname
          %td= teacher.person.name
          %td= teacher.person.dni
          %td= teacher.person.phone
          %td= teacher.person.email
          %td= teacher.person.gender
          %td= teacher.rank
          %td= link_to 'Mostrar', teacher
          %td= link_to 'Editar', edit_teacher_path(teacher)
          %td= link_to 'Eliminar', teacher, method: :delete, data: { confirm: '¿Está seguro?' }
  %br/
  = link_to 'Agregar Docente', new_teacher_path
