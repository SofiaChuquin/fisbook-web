.login
  .login__container
  %h4.no-margin Editar cuenta
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
    = devise_error_messages!
    .form__field
      = f.label :email, 'Correo electr칩nico'
      = f.email_field :email, autofocus: true
    - if devise_mapping.confirmable? && resource.pending_reconfirmation?
      %div
        Currently waiting confirmation for: #{resource.unconfirmed_email}
    .form_field
      = f.label :password, 'Nueva Contrase침a'
      %i (leave blank if you don't want to change it)
      = f.password_field :password, autocomplete: "off"
      -# - if @minimum_password_length
      -#   %br/
      -#   %em
      -#     = @minimum_password_length
      -#     characters minimum
    .form__field
      = f.label :password_confirmation, 'Confirmar nueva contrase침a'
      = f.password_field :password_confirmation, autocomplete: "off"
    .form__field
      = f.label :current_password, 'Contrase침a actual'
      %i (we need your current password to confirm your changes)
      = f.password_field :current_password, autocomplete: "off"
    .form__action
      = f.submit "Actualizar"
  %h3 Cancelar mi cuenta
  %p
    Unhappy? #{button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete}
  = link_to "Back", :back
