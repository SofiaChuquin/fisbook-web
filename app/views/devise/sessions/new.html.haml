.login
  .login__container
    %h2.no-margin Iniciar sesión
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .form__field
        = f.label :email, 'Correo electrónico'
        = f.email_field :email, autofocus: true
      .form__field
        = f.label :password, 'Contraseña'
        = f.password_field :password, autocomplete: "off"
      .form__action
        = f.submit "Ingresar", class: 'btn-primary'
    .login__links
      = link_to "Regístrate", new_registration_path(resource_name)
      = link_to 'Olvidaste tu contraseña?', new_password_path(resource_name)
